<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HW1.MainActivityHW1"
    android:padding="18dp">

    <ImageView
        android:id="@+id/hw1_my_Image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/hw1_Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"/>
    <Button
        android:id="@+id/hw1_load_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hw1_Edit"
        android:layout_marginTop="18dp"
        android:text="@string/hw1_load_image"
        />
    <Button
        android:id="@+id/hw1_canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hw1_load_image"
        android:layout_marginTop="18dp"
        android:text="@string/open_shared_canvas"
        />


</androidx.constraintlayout.widget.ConstraintLayout>