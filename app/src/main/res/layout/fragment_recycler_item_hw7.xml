<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hw7_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hw7_name_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginLeft="@dimen/standard_margin"
        app:layout_constraintLeft_toRightOf="@id/hw7_image_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/hw7_image_view"
        android:textStyle="bold"
        android:textSize="@dimen/standart_text"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/hw7_bet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/standard_margin"
        app:layout_constraintLeft_toRightOf="@id/hw7_image_view"
        app:layout_constraintRight_toLeftOf="@id/hw7_participant"
        app:layout_constraintTop_toBottomOf="@id/hw7_name_item"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/hw7_participant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/standard_margin"
        app:layout_constraintLeft_toRightOf="@id/hw7_bet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hw7_name_item"
        android:maxLines="1"/>


</androidx.constraintlayout.widget.ConstraintLayout>