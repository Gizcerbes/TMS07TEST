<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:padding="@dimen/standard_padding"
    tools:context=".HW2.FlagsV2ActivityHW2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/hw2_name_armenia"
                android:textSize="@dimen/hw2_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/orange" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/hw2_name_austria"
                android:textSize="@dimen/hw2_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/hw2_name_belgium"
                android:textSize="@dimen/hw2_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@color/yellow" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@color/red" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/hw2_name_latvia"
                android:textSize="@dimen/hw2_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/carmine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/carmine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/hw2_name_denmark"
                android:textSize="@dimen/hw2_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="3
"
                    android:background="@color/red" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="7"
                    android:background="@color/red" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="3
"
                    android:background="@color/red" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="7"
                    android:background="@color/red" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="@string/hw2_name_spain"
                android:textSize="@dimen/hw2_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/yellow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/red" />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>